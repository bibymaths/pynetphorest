# Core metadata
include LICENSE
include README.md
include CITATION.cff

# Python source
recursive-include src/pynetphorest *.py

# Legacy C/NN/PSSM reference code
recursive-include src/pynetphorest/legacy *.c *.h *.txt

# Required model files
recursive-include src/pynetphorest/models netphorest.db netphorest.json

# Optional: small workflow/config files
include Snakefile
include config.yaml

# ---- Exclusions to keep sdist/wheel lean ----

# Do NOT ship raw data or FASTAs
prune data
prune fastas

# Do NOT ship archives
global-exclude *.gz
global-exclude *.xz

# Do NOT ship VCS metadata
global-exclude .git/
global-exclude .gitmodules
global-exclude .gitignore

# Do NOT ship caches / bytecode / egg-info
global-exclude __pycache__/
global-exclude *.pyc
global-exclude *.pyo
prune src/pynetphorest.egg-info